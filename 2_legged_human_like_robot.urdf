<?xml version="1.0"?>
<robot name="biped_robot">
  <!-- Link: Base (Wider Waist) -->
  <link name="base_link">
    <inertial>
      <mass value="8.0"/>
      <inertia ixx="0.267" ixy="0" ixz="0" iyy="0.042" iyz="0" izz="0.304"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.3 0.8 0.1"/>  <!-- Increased width (0.6 along X-axis) -->
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.3 0.8 0.1"/>  <!-- Wider waist for more stability -->
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Left Leg -->
  <joint name="left_hip_joint" type="revolute">
    <parent link="base_link"/>
    <child link="left_thigh_link"/>
    <origin xyz="0 0.25 -0.05" rpy="0 0 0"/>  <!-- Adjusted offset for wider waist -->
    <axis xyz="0 1 0"/>
    <limit lower=" -1.0" upper="1.0" effort="50" velocity="2.0"/>
  </joint>

  <!-- Link: Left Thigh -->
  <link name="left_thigh_link">
    <inertial>
      <mass value="4.0"/>
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
      <origin xyz="0 0 -0.3" rpy="0 0 0"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.08" length="0.6"/>
      </geometry>
      <origin xyz="0 0 -0.3" rpy="0 0 0"/>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.08" length="0.6"/>
      </geometry>
      <origin xyz="0 0 -0.3" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Joint 2: Left Knee Joint -->
  <joint name="left_knee_joint" type="revolute">
    <parent link="left_thigh_link"/>
    <child link="left_shin_link"/>
    <origin xyz="0 0 -0.6" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="1.571" effort="50" velocity="2.0"/>
  </joint>

  <!-- Link: Left Shin -->
  <link name="left_shin_link">
    <inertial>
      <mass value="4.0"/>
      <inertia ixx="0.004" ixy="0" ixz="0" iyy="0.004" iyz="0" izz="0.004"/>
      <origin xyz="0 0 -0.25" rpy="0 0 0"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.06" length="0.5"/>
      </geometry>
      <origin xyz="0 0 -0.25" rpy="0 0 0"/>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.06" length="0.5"/>
      </geometry>
      <origin xyz="0 0 -0.25" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Joint 3: Left Ankle Joint -->
  <joint name="left_ankle_joint" type="fixed">
    <parent link="left_shin_link"/>
    <child link="left_foot_link"/>
    <origin xyz="0 0 -0.5" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <!--limit lower="-0.436" upper="0.436" effort="50" velocity="2.0"/-->
  </joint>

  <!-- Link: Left Foot -->
  <link name="left_foot_link">
    <inertial>
      <mass value="1.5"/>  <!-- Heavier feet for stability -->
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
      <origin xyz="0 0 -0.035" rpy="0 0 0"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.5 0.35 0.05"/>  <!-- Larger foot size for more stability -->
      </geometry>
      <origin xyz="0 0 -0.035" rpy="0 0 0"/>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.35 0.05"/>
      </geometry>
      <origin xyz="0 0 -0.035" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Right Leg (same as left but mirrored) -->
  <joint name="right_hip_joint" type="revolute">
    <parent link="base_link"/>
    <child link="right_thigh_link"/>
    <origin xyz="0 -0.25 -0.05" rpy="0 0 0"/>  <!-- Adjusted offset for wider waist -->
    <axis xyz="0 1 0"/>
    <limit lower="-1.0" upper="1.0" effort="50" velocity="2.0"/>
  </joint>

  <!-- Link: Right Thigh -->
  <link name="right_thigh_link">
    <inertial>
      <mass value="4.0"/>
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
      <origin xyz="0 0 -0.3" rpy="0 0 0"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.08" length="0.6"/>
      </geometry>
      <origin xyz="0 0 -0.3" rpy="0 0 0"/>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.08" length="0.6"/>
      </geometry>
      <origin xyz="0 0 -0.3" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Joint 2: Right Knee Joint -->
  <joint name="right_knee_joint" type="revolute">
    <parent link="right_thigh_link"/>
    <child link="right_shin_link"/>
    <origin xyz="0 0 -0.6" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="1.571" effort="50" velocity="2.0"/>
  </joint>

  <!-- Link: Right Shin -->
  <link name="right_shin_link">
    <inertial>
      <mass value="4.0"/>
      <inertia ixx="0.004" ixy="0" ixz="0" iyy="0.004" iyz="0" izz="0.004"/>
      <origin xyz="0 0 -0.25" rpy="0 0 0"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.06" length="0.5"/>
      </geometry>
      <origin xyz="0 0 -0.25" rpy="0 0 0"/>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.06" length="0.5"/>
      </geometry>
      <origin xyz="0 0 -0.25" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Joint 3: Right Ankle Joint -->
  <joint name="right_ankle_joint" type="fixed">
    <parent link="right_shin_link"/>
    <child link="right_foot_link"/>
    <origin xyz="0 0 -0.5" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <!--limit lower="-0.436" upper="0.436" effort="50" velocity="2.0"/-->
  </joint>

  <!-- Link: Right Foot -->
  <link name="right_foot_link">
    <inertial>
      <mass value="1.5"/>  <!-- Heavier feet for stability -->
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
      <origin xyz="0 0 -0.035" rpy="0 0 0"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.5 0.35 0.05"/>  <!-- Larger foot size for more stability -->
      </geometry>
      <origin xyz="0 0 -0.035" rpy="0 0 0"/>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.35 0.05"/>
      </geometry>
      <origin xyz="0 0 -0.035" rpy="0 0 0"/>
    </collision>
  </link>
</robot>
